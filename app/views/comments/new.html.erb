<h1>New comment</h1>
<%= form_for(:comment, :url => {:controller => 'comments', :action => 'create'}) do |f| %>
<p> Comment:</br> <%= f.text_field :comment%> </p>
<%= f.submit :Create %>
<% end %>
<% if @comment.errors.any? %>
<ul class="Signup_Errors">
<% for message_error in @comment.errors.full_messages %>
<li>* <%= message_error %></li>
<% end %>
</ul>
<% end %>