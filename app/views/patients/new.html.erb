<div class="container">
  <div class="row">
    <div class="col-md-12">
<%= link_to "<< List", :controller => "users", :action => :index %>
<h1>New patient</h1>
<%= form_for(:patient, :url => {:controller => 'patients', :action => 'create'}, :html => {:id => "PatientForm"}) do |f| %>
<p> Name:</br> <%= f.text_field :name, value: "", :minlength => 6 %> </p>
<p> Address:</br> <%= f.text_field :address, value: "", :minlength => 6 %> </p>
<p> Gender:</br> <%= f.select :gender, options_for_select([['Male','Male'],['Female','Female'],['Others','Others']])%> </p>
<p> DOB:</br> <%= f.date_select :dob, :use_two_digit_numbers => true, :start_year => 1900, :end_year => Date.current.year %></p>
<p> Pincode:</br> <%= f.text_field :pincode, value: "" %> </p>
<%= f.submit :Create %>
<% end %>
<% if @patient.errors.any? %>
<ul class="Signup_Errors">
<% for message_error in @poatient.errors.full_messages %>
<li>* <%= message_error %></li>
<% end %>
</ul>
<% end %>
</div>
</div>
</div>
